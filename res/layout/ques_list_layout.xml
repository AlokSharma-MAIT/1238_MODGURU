<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textViewQuesNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonDeleteQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_delete_ques"
        android:drawableRight="@drawable/ic_menu_delete"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minWidth="48dip"
        android:text="@string/blank" />

    <TextView
        android:id="@+id/textViewListQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/buttonDeleteQuestion"
        android:layout_toRightOf="@id/textViewQuesNo"
        android:padding="5dp"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>